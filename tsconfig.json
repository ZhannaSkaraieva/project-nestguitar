{
  "compilerOptions": {
    "module": "ESNext",//"ESNext",//"ESNext",//"NodeNext",//"module": "NodeNext" .было - "module": "nodenext"
    "moduleResolution": "Node",//"node",//"NodeNext",//"node",//"NodeNext",//"nodenext",
    //"resolvePackageJsonExports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",//"ES2022",//"ESNext",//"target": "ESNext",было - "target": "ES2023"
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "noFallthroughCasesInSwitch": true,
    "strict" :  true ,
    "typeRoots": ["./src/types", "./node_modules/@types"],
   "useDefineForClassFields": false,
  },
      "include": [
        "src/**/*.ts",
        "src/types/**/*.d.ts",
        "prisma.config.ts"
      ],
      "exclude": [
    "node_modules",
    "dist",
    "prisma/generated",
    "**/*.spec.ts"
  ]
}
