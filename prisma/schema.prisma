generator client {
  provider = "prisma-client"
  //output   = "../src/generated"
  output   = "../src/generated/prisma"
  //output   = "../node_modules/.prisma/client"
  moduleFormat    = "cjs"
  //Примечание Настройка moduleFormatнеобходима, поскольку Prisma v7 по умолчанию 
  //поставляется как модуль ES, который не работает с настройкой CommonJS от NestJS. 
  //Если установить moduleFormatзначение cjs, Prisma будет генерировать модуль CommonJS вместо ESM.
}

datasource db {
  provider = "postgresql"
  //url      = env("DATABASE_URL")
}

model Product {
  id          Int         @id @default(autoincrement()) //integer, primary key, auto increment
  createdAt   DateTime    @default(now()) @map("created_at")
  updatedAt   DateTime    @updatedAt @map("updated_at")
  name        String      @unique
  vendorCode  String      @unique
  reviews     String?
  rating      Float?      @default(0)
  article     String      @unique
  type        String
  properties  Json?       @db.JsonB
  description String?
  price       Decimal     @default(0.00) @db.Decimal(10, 2) // до 10 знаков, из них 2 после запятой
  enabled     Boolean     @default(false)
  image       String?
  quantity    Int         @default(0)
  Reviews     Reviews[]
  //Cart_Item  Cart_Item[]
  OrderItem   OrderItem[]

  @@map("product")
}

model User {
  id         Int       @id @default(autoincrement())
  createdAt  DateTime  @default(now()) @map("created_at")
  updatedAt  DateTime  @updatedAt @map("updated_at")
  email      String    @unique
  password   String    @unique
  role       Role      @default(USER)
  firstname  String
  secondname String
  reviews    Reviews[]
  Order      Order[]
  Payment    Payment[]

  //Cart       Cart?
  @@map("user")
}

enum Role {
  USER
  ADMIN
}

model Reviews {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  content   String
  rating    Int
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int

  @@unique([userId, productId])
  @@map("reviews")
}

model Order {
  id         Int           @id @default(autoincrement())
  createdAt  DateTime      @default(now()) @map("created_at")
  updatedAt  DateTime      @updatedAt @map("updated_at")
  user       User          @relation(fields: [userId], references: [id])
  userId     Int
  totalPrice Decimal       @default(0.00) @db.Decimal(10, 2)
  status     PaymentStatus @default(PENDING)
  orderItem  OrderItem[]
  Payment    Payment[]

  //зарезервированное имя в БД
  @@map("order") // because "order" is a reserved keyword in SQL
}

enum PaymentStatus {
  CANCELLED
  SUCCESS
  PENDING
}

model OrderItem {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   Int
  product   Product  @relation(fields: [productId], references: [id])
  productId Int
  quantity  Int      @default(1)

  @@map("order_item") // because "order_item" is a reserved keyword in SQL
}

model Payment {
  id                    Int           @id @default(autoincrement())
  createdAt             DateTime      @default(now()) @map("created_at")
  updatedAt             DateTime      @updatedAt @map("updated_at")
  order                 Order         @relation(fields: [orderId], references: [id])
  orderId               Int
  user                  User          @relation(fields: [userId], references: [id])
  userId                Int
  currency              String        @default("usd")
  amount                Decimal       @db.Decimal(10, 2)
  stripePaymentIntentId String?        @unique
  status                PaymentStatus @default(PENDING)

  @@map("payment")
}

